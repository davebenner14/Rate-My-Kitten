<section>
  <% if (kitten.ratings.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %> <% kitten.ratings.forEach(function(r) { %> <% total +=
      r.rating %>
      <tr>
        <td class="rating-user">
          <img
            alt="avatar"
            src="<%= r.userAvatar %>"
            referrerpolicy="no-referrer"
          />
          <%= r.userName %>
        </td>
        <td><%= r.createdAt.toLocaleDateString() %></td>
        <td><%= r.content %></td>
        <td><%= r.rating %></td>
        <td>
          <% if (user?._id.equals(r.user)) { %>
          <form action="/ratings/<%= r._id %>?_method=DELETE" method="POST">
            <button type="submit">X</button>
          </form>
          <% } %>
        </td>
      </tr>
      <% }); %>
      <tr>
        <td colspan="2"></td>
        <td>
          <strong> <%= (total / kitten.rating.length).toFixed(1) %> </strong>
        </td>
      </tr>
    </tbody>
  </table>
  <% } else { %>
  <h5>No Rating Yet</h5>
  <% } %>
</section>