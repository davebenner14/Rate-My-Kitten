<%- include('../partials/header') %>
</head>
<h2 class="shimmer">Cat Rankings</h2>

<div class="indexContainer">

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th></th>
    </tr>
  </thead>
    <% kittens.forEach(function(k) { %> 
    <tr>
      <td><%= k.name %></td>
      <% if (k.ratings.length) { %>

        <% let total = 0 %> <% k.ratings.forEach(function(r) { %> <% total +=
          r.rating %>
          <% }); %>
              <td class="ratingNum"><%= (total / k.ratings.length).toFixed(1) %></td>
      <% } else { %>
        <td>NA</td>
      <% } %>
      <td><a href="/kittens/<%= k._id %>">DETAILS</a></td>
    </tr>
    <% }); %>
  </div>
  </tbody>
</table>

<%- include('../partials/footer') %>
